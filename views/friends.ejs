<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="people.css" />
  </head>

  <body style="margin-left: 30vh; margin-right: 30vh;">
    <div
      style="
        border: 2px black solid;
        height: 5vh;
        display: flex;
        justify-content: center;
      "
    >
      <input
        type="text"
        name="searchUser"
        class="searchUser"
        onchange=""
        placeholder="Search Here"
      />
    </div>
    <div class="all-users" style="border: 2px solid black;">
      <ul>
        <% for(name in h){%>
        <li>
          <div class="block">
            <div class="user">
              <a href="/chat    ">
                <img
                  class="user-image"
                  src="https://scontent.fudr1-1.fna.fbcdn.net/v/t1.30497-1/c47.0.160.160a/p160x160/84241059_189132118950875_4138507100605120512_n.jpg?_nc_cat=1&_nc_sid=dbb9e7&_nc_ohc=a-1kBr5bVMsAX9xpW3z&_nc_ht=scontent.fudr1-1.fna&oh=515a4d20ab38cbab2a0dd8e0adc4f869&oe=5EE06424"
                />
              </a>
              <div class="user-info">
                <div class="name">
                  <span><%=h[name].name%></span>
                </div>
              </div>
            </div>
          </div>
        </li>
      
        <%} %>
      </ul>
    </div>
    <script>
      var lis = document.querySelectorAll(
        ".all-users ul li .block .user .user-info .name span"
      );

      console.log(lis);
      document
        .querySelector(".searchUser")
        .addEventListener("change", function () {
          document.querySelector(".all-users ul").innerHTML = " ";
          for (var i = 0; i < lis.length; i++) {
            if (
              lis[i].innerHTML.includes(
                document.querySelector(".searchUser").value
              )
            )
              document.querySelector(
                ".all-users ul"
              ).innerHTML += `<li> <div class="block">
              <div class="user">
                <a href="/views/chat.ejs    ">
                  <img class="user-image"
                    src="https://scontent.fudr1-1.fna.fbcdn.net/v/t1.30497-1/c47.0.160.160a/p160x160/84241059_189132118950875_4138507100605120512_n.jpg?_nc_cat=1&_nc_sid=dbb9e7&_nc_ohc=a-1kBr5bVMsAX9xpW3z&_nc_ht=scontent.fudr1-1.fna&oh=515a4d20ab38cbab2a0dd8e0adc4f869&oe=5EE06424">
                </a>
                <div class="user-info">
                  <div class="name">
                    <a href="#">${lis[i].innerHTML}</a>
                    <button class="friend-button">
                      <img src="https://static.xx.fbcdn.net/rsrc.php/v3/yl/r/kVdNswoBB9_.png">
                      <div>Add Friend</div>
                    </button>
                  </div>
                </div>
              </div>
            </div></li>`;
          }
        });
    </script>
  </body>
</html>
