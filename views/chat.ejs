<!DOCTYPE html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font: 13px Helvetica, Arial;
      }
      form {
        background: #000;
        padding: 3px;
        position: fixed;
        bottom: 0;
        width: 100%;
      }
      form input {
        border: 0;
        padding: 10px;
        width: 90%;
        margin-right: 0.5%;
      }
      form button {
        width: 9%;
        background: rgb(130, 224, 255);
        border: none;
        padding: 10px;
      }
      #messages {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      #messages li {
        padding: 5px 10px;
      }
      #messages li:nth-child(odd) {
        background: #eee;
      }
    </style>
  </head>
  <body>
    <ul id="messages"></ul>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
      <input id="name" hidden value="<%=name %>" />
    </form>
    <script src="/socket.io/socket.io.js"></script>

    <script>
      
      const socket = io();//and this is the socket from 
      document.querySelector('form').addEventListener('submit',(event)=>{
        event.preventDefault();
        var node=document.createElement('li');
        node.appendChild(document.createTextNode("me: "+document.getElementById("m").value));
        document.getElementById('messages').appendChild(node);
        socket.emit('chat-message',document.getElementById('name').value,document.getElementById("m").value);
        document.getElementById("m").value="";

      })
      
      socket.on('chat-message',(from,message)=>{
        var node=document.createElement('li');
        node.appendChild(document.createTextNode(from+": "+message));
        document.getElementById('messages').appendChild(node);
      })
    </script>
  </body>
</html>
